// Packages.

import outilsjava.*;

/**
 * La classe ArriveeMedecin permet de gérer les ajouts de médecins dans la clinique.
 */

public class ArriveeMedecin implements OutilsConstantes {
	
	/**
	 * Le constructeur ArriveeMedecin() permet de gérer les ajouts de médecins dans la clinique.
	 * 
	 * @param clinique
	 *            La clinique.
	 */

	public ArriveeMedecin( Clinique clinique ) {
		
		// Constantes du constructeur.

		final String TITRE = "\nArrivée d'un médecin.\n";

		final String AUTRE_AJOUT = "\nVoulez-vous ajouter un autre médecin (O ou N) ? ";

		// Code du constructeur.

		char rep = NON;

		do {
			System.out.println( TITRE );
			
			ElementMedecin elementMedecin = new ElementMedecin();
			int indElement;
			
			elementMedecin.getMedecin().lireNoMedecin();
			indElement = clinique.getListeMedecins().obtenirIndice( elementMedecin );
			
			if ( indElement >= 0 ) {
				System.out.println( "\nErreur, le médecin avec le numéro " + " est déjà dans la clinique." );
			} else {

			}


			
			rep = OutilsLecture.lireOuiNon( AUTRE_AJOUT );
		} while ( rep == OUI );
	}
}